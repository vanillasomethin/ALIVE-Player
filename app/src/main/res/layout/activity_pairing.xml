<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/pairing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pair this device"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/pairing_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Enter this code in the console to pair the device." />

    <TextView
        android:id="@+id/claim_code_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="----"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/claim_code_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Expires in --:--" />

    <Button
        android:id="@+id/claim_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Refresh code" />

    <ProgressBar
        android:id="@+id/claim_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pairing_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="" />
</LinearLayout>
