<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/pairing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pair this device"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/pairing_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Enter the claim code from the console." />

    <EditText
        android:id="@+id/claim_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Claim code"
        android:inputType="textCapCharacters"
        android:maxLines="1" />

    <Button
        android:id="@+id/claim_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pair" />

    <ProgressBar
        android:id="@+id/claim_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pairing_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="" />
</LinearLayout>
